public class Point {
    public int x;
    public int y;

    public Point(int x, int y) {
        this.x = x;
        this.y = y;
    }

    public boolean isNear(Point other) {
        if (this.x == other.x) {
            if (this.y == other.y) return true;
            else if (this.y == other.y - 1) return true;
            else if (this.y == other.y + 1) return true;
            else return false;
        } else if (this.x == other.x - 1) {
            if (this.y == other.y) return true;
            else if (this.y == other.y - 1) return true;
            else if (this.y == other.y + 1) return true;
            else return false;
        } else if (this.x == other.x +1) {
            if (this.y == other.y) return true;
            else if (this.y == other.y - 1) return true;
            else if (this.y == other.y + 1) return true;
            else return false;
        } else {
            return false;
        }
    }

    public boolean isAligned(Point other) {
        return (this.x == other.x || this.y == other.y);
    }

    public void move(char direction) {
        if (direction == 'U') this.x -= 1;
        else if (direction == 'D') this.x += 1;
        else if (direction == 'R') this.y += 1;
        else this.y -= 1;
    }
}
